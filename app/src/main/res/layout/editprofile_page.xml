<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA">

    <TextView
        android:id="@+id/heightWeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height/Weight"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/achievementsLabel"
        app:layout_constraintStart_toStartOf="@+id/positionLabel"
        app:layout_constraintTop_toBottomOf="@+id/positionLabel" />

    <TextView
        android:id="@+id/sportLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/positionLabel"
        app:layout_constraintStart_toStartOf="@+id/highSchoolLabel"
        app:layout_constraintTop_toBottomOf="@+id/highSchoolLabel" />

    <TextView
        android:id="@+id/positionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/heightWeightLabel"
        app:layout_constraintStart_toStartOf="@+id/sportLabel"
        app:layout_constraintTop_toBottomOf="@+id/sportLabel" />

    <TextView
        android:id="@+id/highSchoolLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High School"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/sportLabel"
        app:layout_constraintStart_toStartOf="@+id/hudlLinkLabel"
        app:layout_constraintTop_toBottomOf="@+id/hudlLinkLabel" />

    <Button
        android:id="@+id/cancelButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.279"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAchievements"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/hudlLinkLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:text="Hudl Link"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/highSchoolLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playertxt" />

    <TextView
        android:id="@+id/playertxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="Player Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/footballProfilePic2" />

    <ImageView
        android:id="@+id/footballProfilePic2"
        android:layout_width="253dp"
        android:layout_height="159dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/football_pic" />

    <TextView
        android:id="@+id/achievementsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Achievements"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/editTextAchievements"
        app:layout_constraintStart_toStartOf="@+id/heightWeightLabel"
        app:layout_constraintTop_toBottomOf="@+id/heightWeightLabel" />

    <EditText
        android:id="@+id/linktxt"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#B6B3B3"
        android:backgroundTintMode="add"
        android:drawableTint="#B6B3B3"
        android:ems="10"
        android:foregroundTint="#B6B3B3"
        android:hint="hudlLinkCompleted"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/hudlLinkLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hudlLinkLabel" />

    <EditText
        android:id="@+id/hstxt"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#B6B3B3"
        android:backgroundTintMode="add"
        android:drawableTint="#B6B3B3"
        android:ems="10"
        android:foregroundTint="#B6B3B3"
        android:hint="Example High School"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/highSchoolLabel"
        app:layout_constraintEnd_toEndOf="@+id/linktxt"
        app:layout_constraintStart_toStartOf="@+id/linktxt" />

    <EditText
        android:id="@+id/sporttxt"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#B6B3B3"
        android:backgroundTintMode="add"
        android:drawableTint="#B6B3B3"
        android:ems="10"
        android:foregroundTint="#B6B3B3"
        android:hint="Football"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/sportLabel"
        app:layout_constraintEnd_toEndOf="@+id/hstxt"
        app:layout_constraintStart_toStartOf="@+id/hstxt" />

    <EditText
        android:id="@+id/positiontxt"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#B6B3B3"
        android:backgroundTintMode="add"
        android:drawableTint="#B6B3B3"
        android:ems="10"
        android:foregroundTint="#B6B3B3"
        android:hint="Wide Receiver"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/positionLabel"
        app:layout_constraintEnd_toEndOf="@+id/sporttxt"
        app:layout_constraintStart_toStartOf="@+id/sporttxt" />

    <EditText
        android:id="@+id/heighttxt"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#B6B3B3"
        android:backgroundTintMode="add"
        android:drawableTint="#B6B3B3"
        android:ems="10"
        android:foregroundTint="#B6B3B3"
        android:hint="6'3&quot;/175lbs"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/heightWeightLabel"
        app:layout_constraintEnd_toEndOf="@+id/positiontxt"
        app:layout_constraintStart_toStartOf="@+id/positiontxt" />

    <EditText
        android:id="@+id/editTextAchievements"
        android:layout_width="311dp"
        android:layout_height="109dp"
        android:backgroundTint="#B6B3B3"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Enter achievments here"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heighttxt" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="216dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="141dp"
        android:layout_marginTop="9dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cancelButton"
        app:layout_constraintTop_toBottomOf="@+id/editTextAchievements" />

</androidx.constraintlayout.widget.ConstraintLayout>