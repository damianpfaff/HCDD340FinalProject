<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA">

    <TextView
        android:id="@+id/heightWeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height/Weight"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/achievementsLabel"
        app:layout_constraintStart_toStartOf="@+id/positionLabel"
        app:layout_constraintTop_toBottomOf="@+id/positionLabel" />

    <TextView
        android:id="@+id/sportLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/positionLabel"
        app:layout_constraintStart_toStartOf="@+id/highSchoolLabel"
        app:layout_constraintTop_toBottomOf="@+id/highSchoolLabel" />

    <TextView
        android:id="@+id/positionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/heightWeightLabel"
        app:layout_constraintStart_toStartOf="@+id/sportLabel"
        app:layout_constraintTop_toBottomOf="@+id/sportLabel" />

    <TextView
        android:id="@+id/highSchoolLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High School"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/sportLabel"
        app:layout_constraintStart_toStartOf="@+id/hudlLinkLabel"
        app:layout_constraintTop_toBottomOf="@+id/hudlLinkLabel" />

    <Button
        android:id="@+id/backButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Back"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAchievements" />

    <TextView
        android:id="@+id/hudlLinkLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:text="Hudl Link"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/highSchoolLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerNameLabel" />

    <TextView
        android:id="@+id/playerNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Player Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePic" />

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="241dp"
        android:layout_height="164dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img" />

    <TextView
        android:id="@+id/achievementsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Achievements"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/editTextAchievements"
        app:layout_constraintStart_toStartOf="@+id/heightWeightLabel"
        app:layout_constraintTop_toBottomOf="@+id/heightWeightLabel" />

    <EditText
        android:id="@+id/editTextHudlLink"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#B6B3B3"
        android:backgroundTintMode="add"
        android:drawableTint="#B6B3B3"
        android:ems="10"
        android:foregroundTint="#B6B3B3"
        android:hint="hudl.com/myprofile"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/hudlLinkLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hudlLinkLabel" />

    <EditText
        android:id="@+id/editTextHighSchool"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#B6B3B3"
        android:backgroundTintMode="add"
        android:drawableTint="#B6B3B3"
        android:ems="10"
        android:foregroundTint="#B6B3B3"
        android:hint="Example High School"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/highSchoolLabel"
        app:layout_constraintEnd_toEndOf="@+id/editTextHudlLink"
        app:layout_constraintStart_toStartOf="@+id/editTextHudlLink" />

    <EditText
        android:id="@+id/editTextSport"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#B6B3B3"
        android:backgroundTintMode="add"
        android:drawableTint="#B6B3B3"
        android:ems="10"
        android:foregroundTint="#B6B3B3"
        android:hint="Football"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/sportLabel"
        app:layout_constraintEnd_toEndOf="@+id/editTextHighSchool"
        app:layout_constraintStart_toStartOf="@+id/editTextHighSchool" />

    <EditText
        android:id="@+id/editTextPosition"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#B6B3B3"
        android:backgroundTintMode="add"
        android:drawableTint="#B6B3B3"
        android:ems="10"
        android:foregroundTint="#B6B3B3"
        android:hint="Wide Receiver"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/positionLabel"
        app:layout_constraintEnd_toEndOf="@+id/editTextSport"
        app:layout_constraintStart_toStartOf="@+id/editTextSport" />

    <EditText
        android:id="@+id/editTextHeightWeight"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#B6B3B3"
        android:backgroundTintMode="add"
        android:drawableTint="#B6B3B3"
        android:ems="10"
        android:foregroundTint="#B6B3B3"
        android:hint="6'3&quot;/175lbs"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/heightWeightLabel"
        app:layout_constraintEnd_toEndOf="@+id/editTextPosition"
        app:layout_constraintStart_toStartOf="@+id/editTextPosition" />

    <EditText
        android:id="@+id/editTextAchievements"
        android:layout_width="311dp"
        android:layout_height="109dp"
        android:backgroundTint="#B6B3B3"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Enter achievments here"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextHeightWeight" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="216dp"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>