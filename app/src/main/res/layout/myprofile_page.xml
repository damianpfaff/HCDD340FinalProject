<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA">

    <TextView
        android:id="@+id/heightWeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height/Weight:"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/achievementsLabel"
        app:layout_constraintStart_toStartOf="@+id/positionLabel"
        app:layout_constraintTop_toBottomOf="@+id/positionLabel" />

    <TextView
        android:id="@+id/sportLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport:"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/positionLabel"
        app:layout_constraintStart_toStartOf="@+id/highSchoolLabel"
        app:layout_constraintTop_toBottomOf="@+id/highSchoolLabel" />

    <TextView
        android:id="@+id/positionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position:"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/heightWeightLabel"
        app:layout_constraintStart_toStartOf="@+id/sportLabel"
        app:layout_constraintTop_toBottomOf="@+id/sportLabel" />

    <TextView
        android:id="@+id/highSchoolLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High School:"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/sportLabel"
        app:layout_constraintStart_toStartOf="@+id/hudlLinkLabel"
        app:layout_constraintTop_toBottomOf="@+id/hudlLinkLabel" />

    <Button
        android:id="@+id/cancelButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/editProfileButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/editProfileButton"
        app:layout_constraintTop_toTopOf="@+id/editProfileButton" />

    <TextView
        android:id="@+id/hudlLinkLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:text="Hudl Link:"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/highSchoolLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playertxt"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/playertxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="Saeed Abdullah"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/footballProfilePic" />

    <TextView
        android:id="@+id/achievementsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Achievements:"
        android:textColor="#323131"
        app:layout_constraintBottom_toTopOf="@+id/editTextAchievements"
        app:layout_constraintStart_toStartOf="@+id/editTextAchievements" />

    <EditText
        android:id="@+id/editTextAchievements"
        android:layout_width="311dp"
        android:layout_height="109dp"
        android:layout_marginBottom="68dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:background="#EAEAEA"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="216dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hudlLinkCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/link"
        android:textColor="#323131"
        app:layout_constraintBottom_toBottomOf="@+id/hudlLinkLabel"
        app:layout_constraintStart_toEndOf="@+id/hudlLinkLabel" />

    <TextView
        android:id="@+id/highSchoolCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/hs"
        android:textColor="#323131"
        app:layout_constraintBaseline_toBaselineOf="@+id/highSchoolLabel"
        app:layout_constraintStart_toEndOf="@+id/highSchoolLabel" />

    <TextView
        android:id="@+id/sportCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/sport"
        android:textColor="#323131"
        app:layout_constraintBaseline_toBaselineOf="@+id/sportLabel"
        app:layout_constraintStart_toEndOf="@+id/sportLabel" />

    <TextView
        android:id="@+id/positionCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/pos"
        android:textColor="#323131"
        app:layout_constraintBaseline_toBaselineOf="@+id/positionLabel"
        app:layout_constraintStart_toEndOf="@+id/positionLabel" />

    <TextView
        android:id="@+id/heightWeightCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="6'10&quot;/294lbs"
        android:textColor="#323131"
        app:layout_constraintBaseline_toBaselineOf="@+id/heightWeightLabel"
        app:layout_constraintStart_toEndOf="@+id/heightWeightLabel" />

    <Button
        android:id="@+id/editProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Edit Profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancelButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAchievements" />

    <TextView
        android:id="@+id/achievement2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Team MVP 2022"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/editTextAchievements"
        app:layout_constraintTop_toBottomOf="@+id/achievment1Label" />

    <TextView
        android:id="@+id/achievement3Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Team Captain 2021-2022"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/achievement2Label"
        app:layout_constraintTop_toBottomOf="@+id/achievement2Label" />

    <TextView
        android:id="@+id/achievment1Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="All American 2022"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/achievement2Label"
        app:layout_constraintTop_toTopOf="@+id/editTextAchievements" />

    <ImageView
        android:id="@+id/footballProfilePic"
        android:layout_width="253dp"
        android:layout_height="159dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/football_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>